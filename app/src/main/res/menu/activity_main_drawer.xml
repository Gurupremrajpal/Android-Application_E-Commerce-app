<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="navigation_view">
    <group android:checkableBehavior="single">

        <item
            android:id="@+id/nav_my_mall"
            android:icon="@drawable/mymall"
            android:title="My Home"
            app:showAsAction="never"/>
        <item
            android:id="@+id/nav_my_orders"
            android:icon="@drawable/shoppingbag"
            android:title="My Orders"
            app:showAsAction="never"/>
        <item
            android:id="@+id/nav_my_rewards"
            android:icon="@drawable/reward"
            android:title="My Rewards"
            app:showAsAction="never"/>
        <item
            android:id="@+id/nav_my_cart"
            android:icon="@drawable/cart"
            android:title="My Cart"
            app:showAsAction="never"/>
        <item
            android:id="@+id/nav_my_wishlist"
            android:icon="@drawable/heart"
            android:title="My Wishlist"
            app:showAsAction="never"/>
        <item
            android:id="@+id/nav_my_account"
            android:icon="@drawable/usermale"
            android:title="My Account"
            app:showAsAction="never"/>
    </group>

    <item
        android:id="@+id/nav_sign_out"
        android:icon="@drawable/logout"
        android:title="Sign Out"
        app:showAsAction="never"/>


</FrameLayout>
